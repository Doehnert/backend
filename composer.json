    "require": {
        "slim/slim": "4.*",
        "catfan/medoo": "^1.7",
        "php-di/slim-bridge": "^3.0",
        "php-di/php-di": "^6.2",
        "slim/psr7": "^1.1",
        "tuupola/cors-middleware": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "Src/Api",
            "Data\\": "Src/Data",
            "Core\\": "Src/Core",
            "Infrastructure\\": "Src/Infrastructure",
            "Persistence\\": "Src/Persistence"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t Src Src/index.php"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
